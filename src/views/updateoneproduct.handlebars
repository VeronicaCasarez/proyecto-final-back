

    <!-- Formulario para actualizar un producto -->
    <form id="updateProductForm"  method="POST">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" required><br>

        <label for="description">Descripción:</label>
        <textarea id="description" name="description" required></textarea><br>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" required><br>

        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required><br>

        <label for="availability">Disponibilidad:</label>
        <input type="number" id="availability" name="availability" required><br>
         <!-- Botón para actualizar el producto -->
         <label for="id">Id:</label>
        <input type="number" id="id" name="id" ><br>
         <button  id="{{this._id}}" >Actualizar ingrese el id del producto</button>

    </form>
</div>