
<div class="container mt-5">
   <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/api/products">Ir a home</a>
                </div>
            </nav>
        </div>
    </div>
<h1>Carritos de Compras</h1>
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Carrito {{cart._id}}</h2>

          <!-- Botón para finalizar proceso de compra -->
          {{#if isEmptyCart}}
            <button type="button" 
            class="btn btn-secondary button-finish-purchase" 
            id="{{cart._id}}">Finalizar proceso de compra</button>
          {{/if}}                    

          <!-- Botón para vaciar todo el carrito -->
          {{#if isEmptyCart}}
          <button
            type="button"
            class="btn btn-outline-danger button-empty-cart"
            id="{{cart._id}}"
          > Vaciar Carrito</button>
          {{/if}}

          {{#each cart.products}}
            <ul class="list-group">
              <li class="list-group-item">
                <h5 class="card-subtitle mb-2 text-muted">Id del producto: {{this._id}}</h5>
                <p class="card-text">Nombre: {{this.name}}</p>
                <p class="card-text">Precio: {{this.price}}</p>
                <p class="card-text">Cantidad: {{this.quantity}}</p>
                <!-- Botón para eliminar un producto del carrito -->
                <button
                  type="button"
                  class="btn btn-outline-secondary button-remove-product"
                  id="{{cart._id}}"
                > Eliminar Producto</button>
              </li>
            </ul>
          {{/each}}

          <!-- Total del carrito -->
          <h2 class="card-title">Total {{cart.total}}</h2>

          {{#unless this.products.length}}
            <p class="mt-3">Este carrito está vacío</p>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/purchase.js"></script>
<script src="/js/cart.js"></script>